<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AvaloniauiApp.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="AvaloniauiApp.Views.SettingsTabView"
             x:DataType="vm:MainWindowViewModel">

    <ScrollViewer>
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" 
              ColumnDefinitions="*,Auto,*"
              Margin="40">
            
            <!-- 設定標題 -->
            <TextBlock Grid.Row="0" Grid.Column="1"
                       Text="系統設定"
                       FontSize="28" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"
                       Foreground="#333333"/>

            <!-- 通知設定 -->
            <Border Grid.Row="1" Grid.Column="1"
                    Background="White"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,15"
                    MinWidth="300">
                <StackPanel>
                    <TextBlock Text="通知設定"
                               FontSize="18" FontWeight="Medium"
                               Margin="0,0,0,15"
                               Foreground="#333333"/>
                    <CheckBox Content="啟用推播通知" 
                              IsChecked="True"
                              Margin="0,0,0,10"/>
                    <CheckBox Content="啟用電子郵件通知" 
                              IsChecked="True"
                              Margin="0,0,0,10"/>
                    <CheckBox Content="啟用簡訊通知" 
                              IsChecked="False"/>
                </StackPanel>
            </Border>

            <!-- 隱私設定 -->
            <Border Grid.Row="2" Grid.Column="1"
                    Background="White"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,15"
                    MinWidth="300">
                <StackPanel>
                    <TextBlock Text="隱私設定"
                               FontSize="18" FontWeight="Medium"
                               Margin="0,0,0,15"
                               Foreground="#333333"/>
                    <CheckBox Content="允許個人資料搜尋" 
                              IsChecked="False"
                              Margin="0,0,0,10"/>
                    <CheckBox Content="顯示上線狀態" 
                              IsChecked="True"
                              Margin="0,0,0,10"/>
                    <CheckBox Content="允許第三方存取" 
                              IsChecked="False"/>
                </StackPanel>
            </Border>

            <!-- 語言設定 -->
            <Border Grid.Row="3" Grid.Column="1"
                    Background="White"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,15"
                    MinWidth="300">
                <StackPanel>
                    <TextBlock Text="語言設定"
                               FontSize="18" FontWeight="Medium"
                               Margin="0,0,0,15"
                               Foreground="#333333"/>
                    <ComboBox SelectedIndex="0" 
                              HorizontalAlignment="Stretch">
                        <ComboBoxItem Content="繁體中文"/>
                        <ComboBoxItem Content="English"/>
                        <ComboBoxItem Content="日本語"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- 主題設定 -->
            <Border Grid.Row="4" Grid.Column="1"
                    Background="White"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,20"
                    MinWidth="300">
                <StackPanel>
                    <TextBlock Text="主題設定"
                               FontSize="18" FontWeight="Medium"
                               Margin="0,0,0,15"
                               Foreground="#333333"/>
                    <ComboBox SelectedIndex="0" 
                              HorizontalAlignment="Stretch">
                        <ComboBoxItem Content="淺色主題"/>
                        <ComboBoxItem Content="深色主題"/>
                        <ComboBoxItem Content="自動"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- 儲存設定按鈕 -->
            <Button Grid.Row="5" Grid.Column="1"
                    Content="儲存設定"
                    Command="{Binding SaveSettingsCommand}"
                    FontSize="14"
                    Padding="30,10"
                    Background="#28a745"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="4"
                    HorizontalAlignment="Center"/>

        </Grid>
    </ScrollViewer>
</UserControl> 