<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AvaloniauiApp.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="AvaloniauiApp.Views.HelpTabView"
             x:DataType="vm:MainWindowViewModel">

    <ScrollViewer>
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" 
              ColumnDefinitions="*,Auto,*"
              Margin="40">
            
            <!-- 幫助標題 -->
            <TextBlock Grid.Row="0" Grid.Column="1"
                       Text="幫助中心"
                       FontSize="28" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"
                       Foreground="#333333"/>

            <!-- 常見問題 -->
            <Border Grid.Row="1" Grid.Column="1"
                    Background="White"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,15"
                    MinWidth="400">
                <StackPanel>
                    <TextBlock Text="常見問題"
                               FontSize="18" FontWeight="Medium"
                               Margin="0,0,0,15"
                               Foreground="#333333"/>
                    <Expander Header="如何修改密碼？" 
                              IsExpanded="False"
                              Margin="0,0,0,10">
                        <TextBlock Text="請前往「個人資料」頁面，點擊「修改密碼」按鈕進行密碼修改。"
                                   TextWrapping="Wrap"
                                   Margin="10"/>
                    </Expander>
                    <Expander Header="如何啟用雙重認證？" 
                              IsExpanded="False"
                              Margin="0,0,0,10">
                        <TextBlock Text="請前往「設定」頁面，在安全設定中啟用雙重認證功能。"
                                   TextWrapping="Wrap"
                                   Margin="10"/>
                    </Expander>
                    <Expander Header="忘記密碼怎麼辦？" 
                              IsExpanded="False">
                        <TextBlock Text="請點擊登入頁面的「忘記密碼」連結，系統會發送重設密碼的電子郵件給您。"
                                   TextWrapping="Wrap"
                                   Margin="10"/>
                    </Expander>
                </StackPanel>
            </Border>

            <!-- 聯絡我們 -->
            <Border Grid.Row="2" Grid.Column="1"
                    Background="White"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,15"
                    MinWidth="400">
                <StackPanel>
                    <TextBlock Text="聯絡我們"
                               FontSize="18" FontWeight="Medium"
                               Margin="0,0,0,15"
                               Foreground="#333333"/>
                    <TextBlock Text="📧 客服信箱：support@example.com"
                               FontSize="14"
                               Margin="0,0,0,8"
                               Foreground="#666666"/>
                    <TextBlock Text="📞 客服電話：(02) 1234-5678"
                               FontSize="14"
                               Margin="0,0,0,8"
                               Foreground="#666666"/>
                    <TextBlock Text="🕒 服務時間：週一至週五 9:00-18:00"
                               FontSize="14"
                               Foreground="#666666"/>
                </StackPanel>
            </Border>

            <!-- 意見回饋 -->
            <Border Grid.Row="3" Grid.Column="1"
                    Background="White"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,20"
                    MinWidth="400">
                <StackPanel>
                    <TextBlock Text="意見回饋"
                               FontSize="18" FontWeight="Medium"
                               Margin="0,0,0,15"
                               Foreground="#333333"/>
                    <TextBox Watermark="請輸入您的意見或建議..."
                             AcceptsReturn="True"
                             Height="100"
                             Margin="0,0,0,15"/>
                    <Button Content="送出意見回饋"
                            Command="{Binding SubmitFeedbackCommand}"
                            FontSize="14"
                            Padding="20,8"
                            Background="#007bff"
                            Foreground="White"
                            BorderThickness="0"
                            CornerRadius="4"
                            HorizontalAlignment="Right"/>
                    <TextBlock Text="{Binding FeedbackMessage}"
                               FontSize="12"
                               Foreground="#28a745"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

        </Grid>
    </ScrollViewer>
</UserControl> 